{
	"compilerOptions": {
		"outDir": "./dist",
		"target": "es5",
		"lib": ["es6", "es2015"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react",
		"removeComments": true,
		"declaration": true
	},
	"include": ["./src/components"],
	"exclude": ["node_modules"]
}
